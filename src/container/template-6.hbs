<header class="header">
	<a href="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" class="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<hr class="border_line">
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h1 class="updates_title">{{title}}</h1>
	{{#each list}}
	<div class="upd">
		<div class="vector">
			<p>32x32</p>
		</div>
		<div class="upd_list">
			<strong class="upd_nickname">{{nickname}}</strong>
			<p class="upd_description">{{description}}</p>
		</div>
	</div>
	{{/each}}
	{{/with}}
</div>

{{#with expirience}}
<div class="feedback">
	<div class="feedback_badge">{{badge}}</div>
	<h2 class="feedback_title">{{title}}</h2>
	<div class="feedback_list">
		{{#each list}}
		<div>
			<strong class="list_name">{{name}}</strong>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
</div>
{{/with}}

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Â© 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>