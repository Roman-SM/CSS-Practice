<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{descriotion}}</p>
		<a href="{{href}}" class="main_button">{{button}}</a>
	</div>
</div>
{{/with}}

<main class="featured">
	{{#each featured}}
	<div class="card">
		<div class="featured_image" style="background-image: url({{photo}})"></div>
		<h2 class="featured_heading">{{heading}}</h2>
		<p class="featured_descriotion">{{info}}</p>
		<a href="{{linkUrl}}" class="featured_button">{{linkText}}</a>
	</div>
	{{/each}}
</main>
<div class="actions">
	{{#each actions}}
	<div class="actions_heading">
		<h3 class="actions_title">{{heading}}</h3>
		<a href="{{url}}" class="button actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>
<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>